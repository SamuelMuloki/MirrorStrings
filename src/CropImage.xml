<?xml version="1.0" encoding="utf-8" ?>
<widget id="org.flockofbirds.widget.cropimage.CropImage" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Crop Image</name>
    <description>Crop Image</description>

    <icon />

    <properties>
        <property key="widthOfViewPort" type="integer" defaultValue="100">
            <caption>Image width</caption>
            <category>Options</category>
            <description>The width of the view port of the cropper</description>
        </property>
        <property key="heightOfViewPort" type="integer" defaultValue="100">
            <caption>Image height</caption>
            <category>Options</category>
            <description>The height of the view port of the cropper</description>
        </property>
        <property key="typeOfViewPort" type="enumeration" defaultValue="square">
            <caption>View port type</caption>
            <category>Options</category>
            <description>The type of the view port</description>
            <enumerationValues>
                <enumerationValue key="square">Square</enumerationValue>
                <enumerationValue key="circle">Circle</enumerationValue>
            </enumerationValues>
        </property> 
        <property key="enableOrientation" type="boolean" defaultValue="false">
            <caption>Enable orientation</caption>
            <category>Options</category>
            <description>Enable or disable support for specifying a custom orientation when binding images</description>
        </property>       
    </properties>
</widget>
